<section class="bg-theme-green py-5 section section--{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="home-html">
    <div class="home-html">
        <div class="container">
            {% if section.settings.code != blank %}
                {{ section.settings.code }}
            {% else %}

                <div>
                    <h4 class="text-white">For Professional Use</h4>
                    <h2 class="f1 f-headline-l text-white mb-3"> One Product, Seven Solutions.</h2>
                    <p class="text-white f3 mb-3">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                    <a class="btn btn-outline-warning text-warning" href="">Learn More</a>
                </div>

            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Custom HTML",
    "class": "js-section__home-html",
    "settings": [
        {
            "type": "html",
            "id": "code",
            "label": "HTML",
            "default": "<div class=placeholder-noblocks>Use this section to create or embed advanced HTML content.</div>"
        }
    ],
    "presets": [
        {
            "name": "Custom HTML",
            "category": "Advanced"
        }
    ]
}
{% endschema %}